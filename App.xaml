<Application x:Class="ReconSuite.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="BackgroundDarkBrush" Color="#020202"/>
        <SolidColorBrush x:Key="BackgroundMediumBrush" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="PrimaryBrush" Color="#00FF41"/>
        <SolidColorBrush x:Key="CyanBrush" Color="#00BFFF"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#FFC107"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#00FF41"/>
        <SolidColorBrush x:Key="InfoBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#FF4444"/>
        <SolidColorBrush x:Key="PurpleBrush" Color="#9C27B0"/>
        <SolidColorBrush x:Key="TextGrayBrush" Color="#AAAAAA"/>
        <FontFamily x:Key="MonospaceFont">Consolas</FontFamily>

        <Style x:Key="CyberTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <Style x:Key="SubText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#88FFFFFF"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="StatText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="SectionContainer" TargetType="Border">
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="StatusIndicator" TargetType="Ellipse">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Fill" Value="{StaticResource SuccessBrush}"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0.3"
                                To="1.0"
                                Duration="0:0:1"
                                AutoReverse="True"
                                RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="ModuleButton" TargetType="Button">
            <Setter Property="Background" Value="#0A0A0A"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="CyberProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#222"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        </Style>
    </Application.Resources>
</Application>