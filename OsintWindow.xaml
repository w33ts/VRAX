<Window x:Class="ReconSuite.OsintWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized" 
        
        WindowStartupLocation="CenterOwner"
        
        Background="#0A0A0A"
        FontFamily="Segoe UI"
        Foreground="#CCCCCC"
        ResizeMode="CanResizeWithGrip"
       
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
       
        <SolidColorBrush x:Key="TacticalBlack" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="TacticalDarker" Color="#050505"/>
        <SolidColorBrush x:Key="TacticalDark" Color="#121212"/>
        <SolidColorBrush x:Key="TacticalMedium" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TacticalLight" Color="#242424"/>
        <SolidColorBrush x:Key="TacticalRedDark" Color="#5A0000"/>
        <SolidColorBrush x:Key="TacticalRed" Color="#8B0000"/>
        <SolidColorBrush x:Key="TacticalRedBright" Color="#A30000"/>
        <SolidColorBrush x:Key="TacticalRedText" Color="#CC6666"/>
        <SolidColorBrush x:Key="TacticalRedGlow" Color="#FF3333"/>
        <SolidColorBrush x:Key="TacticalWhite" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TacticalBorder" Color="#330000"/>
        <SolidColorBrush x:Key="TacticalBorderBright" Color="#660000"/>
        <SolidColorBrush x:Key="TacticalDisabled" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TacticalHover" Color="#6A0000"/>
        <SolidColorBrush x:Key="TacticalPanel" Color="#0C0C0C"/>
        <SolidColorBrush x:Key="TacticalGridLine" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TacticalSuccess" Color="#004400"/>
        <SolidColorBrush x:Key="TacticalSuccessText" Color="#44AA44"/>
        <SolidColorBrush x:Key="TacticalWarning" Color= "#442200"/>
        <SolidColorBrush x:Key="TacticalWarningText" Color= "#FFAA44"/>
        <SolidColorBrush x:Key="TacticalCritical" Color= "#440000"/>
        <SolidColorBrush x:Key="TacticalCriticalText" Color= "#FF4444"/>

        
        <DropShadowEffect x:Key="RedGlow" ShadowDepth="0" BlurRadius="15" Color="#FF0000" Opacity="0.3"/>
        <DropShadowEffect x:Key="TextGlow" ShadowDepth="0" BlurRadius="8" Color="#FF3333" Opacity="0.5"/>

        
        <Style x:Key="TacticalButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2"
                                Effect="{x:Null}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TacticalRed}"/>
                                <Setter TargetName="border" Property="Effect" Value="{StaticResource RedGlow}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A0000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalDisabled}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#333333"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource TacticalButton}">
            <Setter Property="Background" Value="#3A0000"/>
            <Setter Property="BorderBrush" Value="#990000"/>
            <Setter Property="Foreground" Value="#FF6666"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource TacticalButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
        </Style>

        <!-- Link Button Style -->
        <Style x:Key="LinkButton" TargetType="Button" BasedOn="{StaticResource TacticalButton}">
            <Setter Property="Background" Value="#1A331A"/>
            <Setter Property="BorderBrush" Value="#006600"/>
            <Setter Property="Foreground" Value="#44FF44"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Height" Value="24"/>
        </Style>

        <!-- Tactical TextBox Style -->
        <Style x:Key="TacticalTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="CaretBrush" Value="{StaticResource TacticalRed}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource TacticalRedBright}"/>
            <Setter Property="SelectionOpacity" Value="0.3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource TacticalRed}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource TacticalRedBright}"/>
                    <Setter Property="Background" Value="{StaticResource TacticalMedium}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tactical ComboBox Style -->
        <Style x:Key="TacticalComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalRedText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Grid.Column="2" Focusable="false" 
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" 
                                          ClickMode="Press" Background="{StaticResource TacticalDark}" 
                                          BorderBrush="{StaticResource TacticalBorder}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{StaticResource TacticalDark}" 
                                                BorderBrush="{StaticResource TacticalBorder}" 
                                                BorderThickness="1" 
                                                Padding="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" HorizontalAlignment="Left" 
                                                                VerticalAlignment="Center" Margin="8,0,0,0"/>
                                                <Path Grid.Column="1" Data="M0,0 L4,4 L8,0 Z" 
                                                      Fill="{StaticResource TacticalRedText}" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              Margin="12,0,30,0" VerticalAlignment="Center"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" 
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Fade">
                                <Border x:Name="DropDownBorder" Background="{StaticResource TacticalDark}" 
                                        BorderThickness="1" BorderBrush="{StaticResource TacticalBorder}" 
                                        MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                    <ScrollViewer SnapsToDevicePixels="True" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Style -->
        <Style x:Key="TacticalComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalRedText}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
                    <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
                    <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Tactical CheckBox Style -->
        <Style x:Key="TacticalCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border x:Name="checkBoxBorder" 
                                    Grid.Column="0"
                                    Width="16" 
                                    Height="16" 
                                    BorderBrush="{StaticResource TacticalBorder}" 
                                    BorderThickness="1" 
                                    Background="{StaticResource TacticalDark}" 
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center">
                                <Path x:Name="checkMark" 
                                      Data="M1,5 L4,8 L8,1" 
                                      Stroke="{StaticResource TacticalRed}" 
                                      StrokeThickness="2" 
                                      Visibility="Collapsed"
                                      Stretch="Uniform" 
                                      Margin="2"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>

                            <ContentPresenter Grid.Column="1" 
                                            Content="{TemplateBinding Content}"
                                            VerticalAlignment="Center"
                                            Margin="2,0,0,0"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="{StaticResource TacticalRed}"/>
                                <Setter TargetName="checkBoxBorder" Property="Background" Value="{StaticResource TacticalRedDark}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="checkBoxBorder" Property="BorderBrush" Value="{StaticResource TacticalRedBright}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tactical DataGrid Style -->
        <Style x:Key="TacticalDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource TacticalPanel}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#0F0F0F"/>
            <Setter Property="RowHeight" Value="36"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
                        <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="36"/>
                        <Setter Property="FontSize" Value="11"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="{StaticResource TacticalGridLine}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="12,4"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
                                <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabItem Style with Glow -->
        <Style x:Key="TacticalTabItem" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" Background="{StaticResource TacticalDark}" Margin="0" 
                                BorderThickness="1,1,1,0" BorderBrush="{StaticResource TacticalBorder}" CornerRadius="0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" 
                                            HorizontalAlignment="Center" ContentSource="Header" 
                                            Margin="20,10"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource TacticalMedium}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource TacticalRed}"/>
                                <Setter TargetName="Border" Property="Effect" Value="{StaticResource RedGlow}"/>
                                <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#999999"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource TacticalLight}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <!-- Expander Style -->
        <Style x:Key="TacticalExpander" TargetType="Expander">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Panel Style -->
        <Style x:Key="TacticalPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>

        <!-- Header Text Style -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Title Text Style with Glow -->
        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="36"/>
            <Setter Property="Effect" Value="{StaticResource TextGlow}"/>
        </Style>

        <!-- Subtitle Text Style -->
        <Style x:Key="SubtitleText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- Severity-based coloring for results -->
        <Style x:Key="SeverityTextBlock" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Severity}" Value="CRITICAL">
                    <Setter Property="Foreground" Value="{StaticResource TacticalCriticalText}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Severity}" Value="WARNING">
                    <Setter Property="Foreground" Value="{StaticResource TacticalWarningText}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Severity}" Value="SUCCESS">
                    <Setter Property="Foreground" Value="{StaticResource TacticalSuccessText}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Severity}" Value="INFO">
                    <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Data Template for OSINT Results -->
        <DataTemplate x:Key="OsintResultTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding Data}" 
                               Style="{StaticResource SeverityTextBlock}"
                               TextWrapping="Wrap"
                               FontSize="11"/>
                    <TextBlock Text="{Binding Source}" 
                               Foreground="#888888" 
                               FontSize="10"
                               Margin="0,2,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                        Content="VISIT" 
                        Style="{StaticResource LinkButton}" 
                        Click="VisitResult_Click"
                        Tag="{Binding}"
                        Margin="12,0,0,0"
                        ToolTip="Open this OSINT result in browser"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource TacticalBlack}">
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel with Glass Effect -->
            <Border Grid.Column="0" 
                   Background="{StaticResource TacticalDark}" 
                   BorderBrush="{StaticResource TacticalBorder}" 
                   BorderThickness="1"
                   Margin="0,0,12,0"
                   CornerRadius="4"
                   Opacity="0.98">
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                             BorderBrush="Transparent"
                             Background="Transparent">
                    <StackPanel Margin="20">
                        <!-- Header with Logo -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="VRAX" Style="{StaticResource TitleText}"/>
                            <TextBlock Text="OSINT // ELITE RECONNAISSANCE" 
                                     Style="{StaticResource HeaderText}" 
                                     Foreground="{StaticResource TacticalRedText}"
                                     Margin="0,0,0,4"/>
                            <TextBlock Text="Advanced Intelligence Gathering Platform v3.0" 
                                     Style="{StaticResource SubtitleText}" 
                                     Foreground="#666666"/>
                        </StackPanel>

                        <!-- Target Mode Selection -->
                        <Border Style="{StaticResource TacticalPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="RECONNAISSANCE MODE" 
                                         Style="{StaticResource HeaderText}" FontSize="14"
                                         Foreground="{StaticResource TacticalRedText}"
                                         Margin="0,0,0,12"/>
                                <ComboBox x:Name="TargetMode" 
                                         Style="{StaticResource TacticalComboBox}"
                                         ItemContainerStyle="{StaticResource TacticalComboBoxItem}"
                                         SelectionChanged="TargetMode_Changed"
                                         Height="40">
                                    <ComboBoxItem Content="🌐 Website And Infrastructure Recon" IsSelected="True"/>
                                    <ComboBoxItem Content="👤 Person And Identity Intelligence"/>
                                    <ComboBoxItem Content="📧 Email Intelligence And Breach Scan"/>
                                    <ComboBoxItem Content="📱 Phone Number OSINT And Forensics"/>
                                    <ComboBoxItem Content="🔑 Username Tracker Across Platforms"/>
                                </ComboBox>
                            </StackPanel>
                        </Border>

                        <!-- Target Input -->
                        <Border Style="{StaticResource TacticalPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="TARGET IDENTIFIER" 
                                         Style="{StaticResource HeaderText}" FontSize="14"
                                         Foreground="{StaticResource TacticalRedText}"
                                         Margin="0,0,0,12"/>
                                <TextBox x:Name="SearchQuery" Text="example.com" 
                                        Style="{StaticResource TacticalTextBox}"
                                        Height="45" FontSize="14"/>
                                <TextBlock x:Name="TargetHint" Text="Enter domain (e.g., example.com)" 
                                         Foreground="#888888" FontSize="11" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Module Selection -->
                        <Border Style="{StaticResource TacticalPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="ACTIVE INTELLIGENCE MODULES" 
                                         Style="{StaticResource HeaderText}" FontSize="14"
                                         Foreground="{StaticResource TacticalRedText}"
                                         Margin="0,0,0,12"/>

                                <!-- Web Infrastructure -->
                                <Expander Header="🌐 WEB INFRASTRUCTURE" Style="{StaticResource TacticalExpander}" IsExpanded="True">
                                    <StackPanel Margin="12,8">
                                        <CheckBox x:Name="ChkHeaders" Content="HTTP Headers And Security Audit" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkWayback" Content="Wayback Machine Timeline Analysis" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkDorks" Content="Advanced Google Dorking" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkExposed" Content="Exposed Files Scanner" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkDNS" Content="DNS Records Deep Dive" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkSubdomain" Content="Subdomain Enumeration" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkTech" Content="Technology Fingerprinting" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkPorts" Content="Port Scanning" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                    </StackPanel>
                                </Expander>

                                <!-- Identity & Social -->
                                <Expander Header="👥 IDENTITY And SOCIAL" Style="{StaticResource TacticalExpander}" IsExpanded="True">
                                    <StackPanel Margin="12,8">
                                        <CheckBox x:Name="ChkSocial" Content="Social Media Footprint Analysis" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkEmail" Content="Email Pattern Generation" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkBreach" Content="Data Breach Lookup" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkPastebin" Content="Pastebin Leak Detection" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkUsername" Content="Username Enumeration" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkPhone" Content="Phone Number Intelligence" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                    </StackPanel>
                                </Expander>

                                <!-- Advanced Recon -->
                                <Expander Header="🔬 ADVANCED RECON" Style="{StaticResource TacticalExpander}">
                                    <StackPanel Margin="12,8">
                                        <CheckBox x:Name="ChkSSL" Content="SSL Certificate Intelligence" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkGeo" Content="IP Geolocation And ASN" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkAPI" Content="API Endpoint Discovery" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkFavicon" Content="Favicon Hash Analysis" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkWhois" Content="WHOIS And Registration Data" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                    </StackPanel>
                                </Expander>

                                <!-- Password Forensics -->
                                <Expander Header="🔐 PASSWORD FORENSICS" Style="{StaticResource TacticalExpander}">
                                    <StackPanel Margin="12,8">
                                        <CheckBox x:Name="ChkPassword" Content="Password Recovery Questions" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkLeaks" Content="Credential Leak Detection" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                        <CheckBox x:Name="ChkPatterns" Content="Password Pattern Analysis" IsChecked="True"
                                                 Style="{StaticResource TacticalCheckBox}"/>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Border>

                        <!-- Scan Options -->
                        <Border Style="{StaticResource TacticalPanelStyle}" Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="SCAN CONFIGURATION" 
                                         Style="{StaticResource HeaderText}" FontSize="14"
                                         Foreground="{StaticResource TacticalRedText}"
                                         Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <CheckBox x:Name="ChkDeepScan" Grid.Row="0" Grid.Column="0" 
                                             Content="Deep Scan Mode" IsChecked="False"
                                             Style="{StaticResource TacticalCheckBox}"/>
                                    <CheckBox x:Name="ChkExport" Grid.Row="0" Grid.Column="1" 
                                             Content="Auto-Export Results" IsChecked="False"
                                             Style="{StaticResource TacticalCheckBox}"/>
                                    <CheckBox x:Name="ChkVerbose" Grid.Row="1" Grid.Column="0" 
                                             Content="Verbose Logging" IsChecked="True"
                                             Style="{StaticResource TacticalCheckBox}"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Action Buttons -->
                        <StackPanel Margin="0,20,0,0">
                            <Button Content="🚀 EXECUTE RECONNAISSANCE" Click="StartOsint_Click" 
                                   Style="{StaticResource ActionButton}" Margin="0,0,0,12"
                                   ToolTip="Start OSINT scan with selected modules"/>
                            <Button x:Name="BtnStop" Content="⛔ ABORT SCAN" Click="StopScan_Click" 
                                   Style="{StaticResource DangerButton}" Height="40" IsEnabled="False" Margin="0,0,0,12"/>
                            <Button Content="💾 EXPORT INTELLIGENCE" Click="ExportResults_Click" 
                                   Style="{StaticResource TacticalButton}" Height="40" Margin="0,0,0,12"/>
                        </StackPanel>

                        <!-- Status Info -->
                        <Border Style="{StaticResource TacticalPanelStyle}">
                            <StackPanel>
                                <TextBlock Text="OPERATION STATUS" 
                                         Style="{StaticResource HeaderText}" FontSize="14"
                                         Foreground="{StaticResource TacticalRedText}"
                                         Margin="0,0,0,12"/>
                                <TextBlock x:Name="StatusText" Text="System Ready - Awaiting Target" 
                                         Foreground="#88AA88" FontSize="12" FontWeight="Bold" 
                                         TextWrapping="Wrap"/>
                                <TextBlock x:Name="ResultCount" Text="Intelligence Items: 0" 
                                         Foreground="{StaticResource TacticalWhite}" FontSize="12" 
                                         FontWeight="Bold" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Right Panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="220"/>
                </Grid.RowDefinitions>

                <!-- Header with Stats -->
                <Border Grid.Row="0" 
                       Background="{StaticResource TacticalDark}" 
                       BorderBrush="{StaticResource TacticalBorder}" 
                       BorderThickness="1" 
                       Padding="20,15"
                       CornerRadius="4"
                       Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Vertical">
                            <TextBlock Text="INTELLIGENCE DASHBOARD" 
                                     Style="{StaticResource HeaderText}" FontSize="20"
                                     Foreground="{StaticResource TacticalRedText}"/>
                            <TextBlock Text="Live OSINT Collection Results" 
                                     Foreground="#888888" FontSize="11"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0" HorizontalAlignment="Right">
                                <TextBlock Text="ELAPSED" Foreground="#888888" FontSize="10"/>
                                <TextBlock x:Name="TimeElapsed" Text="00:00:00" 
                                         Foreground="{StaticResource TacticalRedText}" FontSize="18" FontWeight="Bold"/>
                            </StackPanel>
                            <Button Content="🔄 REFRESH" Click="RefreshGrid_Click" 
                                   Style="{StaticResource TacticalButton}" Width="100" Height="32"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Tab Control with Enhanced DataGrids -->
                <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0,0,0,16">
                    <TabItem Header="📊 ALL INTELLIGENCE" Style="{StaticResource TacticalTabItem}">
                        <DataGrid x:Name="OsintGrid" Style="{StaticResource TacticalDataGrid}" 
                                 AutoGenerateColumns="False" Margin="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="90">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Severity}" Value="CRITICAL">
                                                    <Setter Property="Foreground" Value="{StaticResource TacticalCriticalText}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Severity}" Value="WARNING">
                                                    <Setter Property="Foreground" Value="{StaticResource TacticalWarningText}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Severity}" Value="SUCCESS">
                                                    <Setter Property="Foreground" Value="{StaticResource TacticalSuccessText}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="140"/>
                                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="180"/>
                                <DataGridTemplateColumn Header="Intelligence Data" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Data}" 
                                                           Foreground="{StaticResource TacticalWhite}" 
                                                           TextWrapping="Wrap"
                                                           FontSize="11"/>

                                                <Button Grid.Column="1" 
                                                        Content="VISIT" 
                                                        Style="{StaticResource LinkButton}" 
                                                        Click="VisitResult_Click"
                                                        Tag="{Binding}"
                                                        Margin="8,0,0,0"
                                                        Width="60"
                                                        ToolTip="Open this OSINT result in browser"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="🚨 CRITICAL FINDINGS" Style="{StaticResource TacticalTabItem}">
                        <DataGrid x:Name="CriticalGrid" Style="{StaticResource TacticalDataGrid}" 
                                 AutoGenerateColumns="False" Margin="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="140"/>
                                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="180"/>
                                <DataGridTemplateColumn Header="Critical Intelligence" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Data}" 
                                                           Foreground="{StaticResource TacticalCriticalText}" 
                                                           FontWeight="Bold"
                                                           TextWrapping="Wrap"
                                                           FontSize="11"/>

                                                <Button Grid.Column="1" 
                                                        Content="VISIT" 
                                                        Style="{StaticResource LinkButton}" 
                                                        Click="VisitResult_Click"
                                                        Tag="{Binding}"
                                                        Margin="8,0,0,0"
                                                        Width="60"
                                                        ToolTip="Open this OSINT result in browser"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="🌐 WEB INTELLIGENCE" Style="{StaticResource TacticalTabItem}">
                        <DataGrid x:Name="WebGrid" Style="{StaticResource TacticalDataGrid}" 
                                 AutoGenerateColumns="False" Margin="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Binding="{Binding Category}" Width="140"/>
                                <DataGridTextColumn Header="Component" Binding="{Binding Source}" Width="180"/>
                                <DataGridTemplateColumn Header="Details" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Data}" 
                                                           Foreground="{StaticResource TacticalWhite}" 
                                                           TextWrapping="Wrap"
                                                           FontSize="11"/>

                                                <Button Grid.Column="1" 
                                                        Content="VISIT" 
                                                        Style="{StaticResource LinkButton}" 
                                                        Click="VisitResult_Click"
                                                        Tag="{Binding}"
                                                        Margin="8,0,0,0"
                                                        Width="60"
                                                        ToolTip="Open this OSINT result in browser"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="👤 IDENTITY DATA" Style="{StaticResource TacticalTabItem}">
                        <DataGrid x:Name="IdentityGrid" Style="{StaticResource TacticalDataGrid}" 
                                 AutoGenerateColumns="False" Margin="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Platform" Binding="{Binding Category}" Width="140"/>
                                <DataGridTextColumn Header="Identifier" Binding="{Binding Source}" Width="180"/>
                                <DataGridTemplateColumn Header="Information" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding Data}" 
                                                           Foreground="{StaticResource TacticalWhite}" 
                                                           TextWrapping="Wrap"
                                                           FontSize="11"/>

                                                <Button Grid.Column="1" 
                                                        Content="VISIT" 
                                                        Style="{StaticResource LinkButton}" 
                                                        Click="VisitResult_Click"
                                                        Tag="{Binding}"
                                                        Margin="8,0,0,0"
                                                        Width="60"
                                                        ToolTip="Open this OSINT result in browser"/>
                                            </Grid>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="🔑 LEAKED CREDENTIALS" Style="{StaticResource TacticalTabItem}">
                        <DataGrid x:Name="LeakedCredentialsGrid" Style="{StaticResource TacticalDataGrid}" 
                                 AutoGenerateColumns="False" Margin="0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Type" Binding="{Binding Category}" Width="140"/>
                                <DataGridTextColumn Header="Source" Binding="{Binding Source}" Width="180"/>
                                <DataGridTemplateColumn Header="Leaked Data" Width="*">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Data}" 
                                                     Foreground="{StaticResource TacticalCriticalText}" 
                                                     FontWeight="Bold"
                                                     TextWrapping="Wrap"
                                                     FontSize="11"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </TabItem>

                    <TabItem Header="📈 STATISTICS" Style="{StaticResource TacticalTabItem}">
                        <ScrollViewer Background="{StaticResource TacticalDark}" 
                                    BorderBrush="{StaticResource TacticalBorder}" 
                                    BorderThickness="1">
                            <StackPanel Margin="20">
                                <Border Background="{StaticResource TacticalMedium}" 
                                       Padding="20" Margin="0,0,0,20">
                                    <TextBlock x:Name="StatsText" Foreground="{StaticResource TacticalWhite}" 
                                             FontSize="12" TextWrapping="Wrap" FontFamily="Consolas"/>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>

                <!-- Console Log with Enhanced Design -->
                <Border Grid.Row="2" 
                       Background="{StaticResource TacticalDark}" 
                       BorderBrush="{StaticResource TacticalBorder}" 
                       BorderThickness="1" 
                       Margin="0,0,0,0"
                       CornerRadius="4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Console Header -->
                        <Border Grid.Row="0" 
                               Background="{StaticResource TacticalMedium}" 
                               BorderBrush="{StaticResource TacticalBorder}" 
                               BorderThickness="0,0,0,1" 
                               Padding="16,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" 
                                         Text="🖥️ LIVE CONSOLE OUTPUT" 
                                         Foreground="{StaticResource TacticalRedText}" 
                                         FontSize="12" 
                                         FontWeight="Bold"/>

                                <TextBlock Grid.Column="1" 
                                         Text="REAL-TIME INTELLIGENCE STREAM" 
                                         Foreground="#666666" 
                                         FontSize="10"/>
                            </Grid>
                        </Border>

                        <!-- Console Content -->
                        <ScrollViewer x:Name="LogScroll" Grid.Row="1" 
                                    VerticalScrollBarVisibility="Auto" 
                                    Padding="16,12"
                                    Background="{StaticResource TacticalPanel}">
                            <TextBlock x:Name="LogText" 
                                     Foreground="{StaticResource TacticalWhite}" 
                                     FontSize="11" 
                                     TextWrapping="Wrap" 
                                     FontFamily="Consolas"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Custom Window Controls -->
        <Border Height="30" VerticalAlignment="Top" Background="{StaticResource TacticalDarker}" 
                BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="VRAX OSINT v3.0" 
                         Foreground="{StaticResource TacticalRedText}" 
                         FontWeight="Bold" FontSize="12" 
                         Margin="10,0,0,0" VerticalAlignment="Center"/>

               

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="🔄" Width="30" Height="30" 
                           Style="{StaticResource TacticalButton}" 
                           Click="RefreshGrid_Click"
                           ToolTip="Refresh Dashboard"/>
                    
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>