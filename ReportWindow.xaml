<Window x:Class="ReconSuite.ReportWindow"
        x:ClassModifier="public"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Height="900" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="#0A0A0A"
        FontFamily="Consolas"
        Foreground="#CCCCCC"
        ResizeMode="CanResizeWithGrip"
        >

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="BgMedium" Color="#121212"/>
        <SolidColorBrush x:Key="BgLight" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="Accent" Color="#8B0000"/>
        <SolidColorBrush x:Key="AccentDark" Color="#5A0000"/>
        <SolidColorBrush x:Key="AccentText" Color="#CC6666"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#888888"/>
        <SolidColorBrush x:Key="BorderColor" Color="#333333"/>
        <SolidColorBrush x:Key="Success" Color="#006600"/>
        <SolidColorBrush x:Key="Danger" Color="#8B0000"/>

        <Style x:Key="BaseButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BgLight}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentDark}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="{StaticResource AccentDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
        </Style>

        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="#003300"/>
            <Setter Property="BorderBrush" Value="{StaticResource Success}"/>
            <Setter Property="Foreground" Value="#44FF44"/>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource BaseButton}">
            <Setter Property="Background" Value="#330000"/>
            <Setter Property="BorderBrush" Value="{StaticResource Danger}"/>
            <Setter Property="Foreground" Value="#FF6666"/>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource BgMedium}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentText}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource Accent}"/>
            <Setter Property="SelectionOpacity" Value="0.3"/>
        </Style>

        <Style x:Key="MultiTextBox" TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentDark}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2A2A2A"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BgDark}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="50" Background="{StaticResource BgMedium}" 
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="20,0">
                        <TextBlock Text="VRAX" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextPrimary}"/>
                        <TextBlock Text=" // HUB" FontSize="22" Foreground="{StaticResource AccentText}" Margin="5,0,0,0"/>
                    </StackPanel>

                    <Border Grid.Column="1" HorizontalAlignment="Center" Background="{StaticResource AccentDark}" 
                            Padding="15,5" CornerRadius="2">
                        <TextBlock x:Name="StatusText" Text="READY" Foreground="{StaticResource TextPrimary}"/>
                    </Border>

                    
                </Grid>
            </Border>

            <Grid Grid.Row="1" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource BgLight}" 
                        BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="15">
                            <TextBlock Text="ACTIONS" Foreground="{StaticResource AccentText}" FontSize="11" Margin="0,0,0,10"/>
                            <Button x:Name="GenerateReportBtn" Content="GENERATE REPORT" Height="35" Margin="0,0,0,8"
                                   Style="{StaticResource AccentButton}"/>
                            <Button x:Name="ExportHtmlBtn" Content="EXPORT HTML" Height="35" Margin="0,0,0,8"
                                   Style="{StaticResource BaseButton}"/>
                            <Button x:Name="SyncFindingsBtn" Content="REFRESH" Height="35"
                                   Style="{StaticResource BaseButton}"/>

                            <TextBlock Text="FILTERS" Foreground="{StaticResource AccentText}" FontSize="11" Margin="0,15,0,10"/>
                            <TextBox x:Name="FilterSeverity" Style="{StaticResource ModernTextBox}" Height="30" 
                                   Text="ALL" Margin="0,0,0,8"/>
                            <TextBox x:Name="FilterStatus" Style="{StaticResource ModernTextBox}" Height="30" 
                                   Text="ALL" Margin="0,0,0,8"/>
                            <TextBox x:Name="FilterModule" Style="{StaticResource ModernTextBox}" Height="30" 
                                   Text="ALL" Margin="0,0,0,8"/>
                            <Button x:Name="ApplyFilterBtn" Content="APPLY" Height="32"
                                   Style="{StaticResource BaseButton}"/>
                        </StackPanel>

                        <Grid Grid.Row="1" Margin="15,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Text="FINDINGS" Foreground="{StaticResource AccentText}" FontSize="11" Margin="0,0,0,10"/>

                            <ListBox x:Name="FindingsList" Grid.Row="1"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                                     ItemContainerStyle="{StaticResource ListBoxItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <Border Width="8" Height="8" 
                                                       Background="{Binding SeverityColor}" 
                                                       Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Title}" 
                                                           Foreground="{StaticResource TextPrimary}"
                                                           FontSize="12"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding Module}" 
                                                       Foreground="{StaticResource TextSecondary}"
                                                       FontSize="10" Margin="16,2,0,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>

                        <Border Grid.Row="2" Background="{StaticResource BgMedium}" 
                                BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0"
                                Padding="15,10">
                            <TextBlock x:Name="BottomStatus" Text="READY" Foreground="{StaticResource TextSecondary}" FontSize="11"/>
                        </Border>
                    </Grid>
                </Border>

                <ScrollViewer Grid.Column="1" Margin="15,0,0,0" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <Border Background="{StaticResource BgLight}" 
                                BorderBrush="{StaticResource BorderColor}" BorderThickness="1"
                                Padding="20">
                            <StackPanel>
                                <TextBlock Text="FINDING DETAILS" Foreground="{StaticResource AccentText}" FontSize="11" Margin="0,0,0,15"/>

                                <TextBox x:Name="FindingTitle" Style="{StaticResource ModernTextBox}" Height="40"
                                       Text="ENTER TITLE" FontSize="16" Margin="0,0,0,20"/>

                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0">
                                        <TextBlock Text="SEVERITY" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                        <TextBox x:Name="SeverityInput" Style="{StaticResource ModernTextBox}" Height="32" Text="MEDIUM"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="2">
                                        <TextBlock Text="CVSS" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                        <TextBox x:Name="CvssInput" Style="{StaticResource ModernTextBox}" Height="32" Text="5.0"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,10,0,0">
                                        <TextBlock Text="STATUS" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                        <TextBox x:Name="StatusInput" Style="{StaticResource ModernTextBox}" Height="32" Text="OPEN"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,10,0,0">
                                        <TextBlock Text="ASSIGNED" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                        <TextBox x:Name="AssignedInput" Style="{StaticResource ModernTextBox}" Height="32" Text="analyst"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,0,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="MODULE" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                        <TextBox x:Name="ModuleInput" Style="{StaticResource ModernTextBox}" Height="32" Text="SCANNER"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="TARGET" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TargetInput" Style="{StaticResource ModernTextBox}" Height="32" Text="https://"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="OWASP" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                    <TextBox x:Name="OwaspInput" Style="{StaticResource ModernTextBox}" Height="32" Text="A01:2021-Broken Access Control"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="DESCRIPTION" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                    <TextBox x:Name="DescriptionInput" Style="{StaticResource MultiTextBox}" Height="120"
                                           Text="DESCRIBE THE VULNERABILITY HERE"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,20">
                                    <TextBlock Text="REMEDIATION" Foreground="{StaticResource TextSecondary}" FontSize="10" Margin="0,0,0,5"/>
                                    <TextBox x:Name="RemediationInput" Style="{StaticResource MultiTextBox}" Height="100"
                                           Text="PROVIDE REMEDIATION STEPS"/>
                                </StackPanel>

                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <TextBlock Text="EVIDENCE" Foreground="{StaticResource TextSecondary}" FontSize="10"/>
                                        <Button x:Name="AddEvidenceBtn" Content="+ ADD" Margin="15,0,0,0"
                                              Padding="10,3" Style="{StaticResource BaseButton}" FontSize="10"/>
                                    </StackPanel>
                                    <ListBox x:Name="EvidenceList" Height="80"
                                           Background="{StaticResource BgMedium}"
                                           BorderBrush="{StaticResource BorderColor}"
                                           BorderThickness="1"
                                           ItemContainerStyle="{StaticResource ListBoxItemStyle}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding DisplayName}" Foreground="{StaticResource TextPrimary}" FontSize="11"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                                    <Button x:Name="DeleteFindingBtn" Content="DELETE" Width="90"
                                          Style="{StaticResource DangerButton}" Margin="0,0,10,0"/>
                                    <Button x:Name="NewFindingBtn" Content="NEW" Width="90"
                                          Style="{StaticResource BaseButton}" Margin="0,0,10,0"/>
                                    <Button x:Name="SaveFindingBtn" Content="SAVE" Width="90"
                                          Style="{StaticResource SuccessButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Border Grid.Row="2" Background="{StaticResource BgMedium}" 
                    BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0"
                    Margin="0,15,0,0" Padding="15,10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="DbStatus" Text="DATABASE: READY" Foreground="{StaticResource TextSecondary}" FontSize="10"/>
                    <TextBlock Text=" • " Foreground="{StaticResource BorderColor}" FontSize="10"/>
                    <TextBlock x:Name="FindingCount" Text="FINDINGS: 0" Foreground="{StaticResource TextPrimary}" FontSize="10"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>