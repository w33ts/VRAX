<Window x:Class="VRAX.CrackerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Height="1000" Width="1920"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="#0A0A0A"
        FontFamily="Segoe UI"
        Foreground="#CCCCCC"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        
        <SolidColorBrush x:Key="TacticalBlack" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="TacticalDark" Color="#121212"/>
        <SolidColorBrush x:Key="TacticalMedium" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TacticalLight" Color="#242424"/>
        <SolidColorBrush x:Key="TacticalRedDark" Color="#5A0000"/>
        <SolidColorBrush x:Key="TacticalRed" Color="#8B0000"/>
        <SolidColorBrush x:Key="TacticalRedBright" Color="#A30000"/>
        <SolidColorBrush x:Key="TacticalRedText" Color="#CC6666"/>
        <SolidColorBrush x:Key="TacticalWhite" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TacticalBorder" Color="#450000"/>
        <SolidColorBrush x:Key="TacticalDisabled" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TacticalHover" Color="#6A0000"/>
        <SolidColorBrush x:Key="TacticalPanel" Color="#101010"/>
        <SolidColorBrush x:Key="TacticalSuccess" Color="#006600"/>
        <SolidColorBrush x:Key="TacticalWarning" Color="#996600"/>
        <SolidColorBrush x:Key="TacticalGold" Color="#996600"/>
        <SolidColorBrush x:Key="TacticalGoldLight" Color="#CC8800"/>

       
        <Style x:Key="TacticalButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TacticalRed}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A0000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalDisabled}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#333333"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="GoldButton" TargetType="Button" BasedOn="{StaticResource TacticalButton}">
            <Setter Property="Background" Value="#332200"/>
            <Setter Property="BorderBrush" Value="#996600"/>
            <Setter Property="Foreground" Value="#FFAA44"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#443300"/>
                    <Setter Property="BorderBrush" Value="#CC8800"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource TacticalButton}">
            <Setter Property="Background" Value="#3A0000"/>
            <Setter Property="BorderBrush" Value="#990000"/>
            <Setter Property="Foreground" Value="#FF6666"/>
        </Style>

        
        <Style x:Key="TacticalTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="CaretBrush" Value="{StaticResource TacticalRed}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource TacticalRedBright}"/>
            <Setter Property="SelectionOpacity" Value="0.3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

       
        <Style x:Key="ReadOnlyTextBox" TargetType="TextBox" BasedOn="{StaticResource TacticalTextBox}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="{StaticResource TacticalPanel}"/>
            <Setter Property="Foreground" Value="#888888"/>
        </Style>

        
        <Style x:Key="TacticalProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalRed}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="10"/>
        </Style>

        
        <Style x:Key="GoldProgressBar" TargetType="ProgressBar" BasedOn="{StaticResource TacticalProgressBar}">
            <Setter Property="Foreground" Value="{StaticResource TacticalGoldLight}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalGold}"/>
        </Style>

        
        <Style x:Key="TacticalComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalRedText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" 
                                        Grid.Column="2" 
                                        Focusable="false" 
                                        ClickMode="Press" 
                                        IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Grid.Column="0" 
                                                    HorizontalAlignment="Left" 
                                                    VerticalAlignment="Center" 
                                                    Margin="{TemplateBinding Padding}"
                                                    Content="{TemplateBinding SelectionBoxItem}"
                                                    ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                    ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                                    <Path Grid.Column="1" 
                                        x:Name="Arrow" 
                                        Fill="#888888" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"
                                        Data="M 0 0 L 4 4 L 8 0 Z"/>
                                </Grid>
                            </ToggleButton>
                            <Popup x:Name="Popup" 
                                Placement="Bottom" 
                                IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                AllowsTransparency="True" 
                                Focusable="False" 
                                PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder" 
                                      Background="{StaticResource TacticalDark}" 
                                      BorderBrush="{StaticResource TacticalBorder}"
                                      BorderThickness="1" 
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <ScrollViewer>
                                        <ItemsPresenter/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource TacticalRed}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="TacticalComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalRedText}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource TacticalHover}"/>
                    <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
                    <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

       
        <Style x:Key="StatsPanel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource TacticalBlack}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header Section -->
            <Border Grid.Row="0" Height="48" Background="{StaticResource TacticalDark}" 
                    BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                  
                    <StackPanel Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
                        <TextBlock Text="VRAX" Style="{StaticResource HeaderText}" FontSize="20"/>
                        <TextBlock Text=" CRACKER" Style="{StaticResource HeaderText}" Foreground="{StaticResource TacticalRed}" 
                                 FontWeight="SemiBold" Margin="4,0,0,0"/>
                        <TextBlock Text="HASH ANALYSIS ENGINE" Style="{StaticResource HeaderText}" 
                                 FontSize="16" Margin="20,0,0,0" Foreground="#AAAAAA"/>
                    </StackPanel>

                    
                    <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Background="{StaticResource TacticalRedDark}" Padding="12,4" CornerRadius="2">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource TacticalRed}" Margin="0,0,8,0"/>
                            <TextBlock x:Name="CoreStatus" Text="READY" Style="{StaticResource HeaderText}" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    
                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,12,0" VerticalAlignment="Center">
                        <Border Style="{StaticResource StatsPanel}" Height="55">
                            <StackPanel>
                                <TextBlock Text="ENGINE" Foreground="#888888" FontSize="9" FontWeight="SemiBold"/>
                                <TextBlock Text="v7.0" Foreground="{StaticResource TacticalWhite}" FontSize="12" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource StatsPanel}" Margin="12,0,0,0" Height="56">
                            <StackPanel>
                                <TextBlock Text="SECURITY" Foreground="#888888" FontSize="9" FontWeight="SemiBold"/>
                                <TextBlock Text="AES-256" Foreground="#44FF44" FontSize="12" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            
            <Grid Grid.Row="1" Margin="0,12,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                
                <Border Grid.Column="0" Background="{StaticResource TacticalMedium}" 
                       BorderBrush="{StaticResource TacticalBorder}" BorderThickness="1"
                       Margin="0,0,12,0">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                        <StackPanel>
                            <TextBlock Text="TARGET CONFIGURATION" Style="{StaticResource SectionHeader}"/>

                            <TextBlock Text="TARGET HASH" Foreground="#888888" FontSize="11" Margin="0,0,0,6"/>
                            <TextBox x:Name="HashInput" 
                                     Style="{StaticResource TacticalTextBox}"
                                     Height="60"
                                     Margin="0,0,0,20"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"/>

                            <TextBlock Text="ALGORITHM SELECTION" Foreground="#888888" FontSize="11" Margin="0,0,0,6"/>
                            <ComboBox x:Name="HashTypeCombo"
          Style="{StaticResource TacticalComboBox}"
          Foreground="#8B0000"
          TextElement.Foreground="#8B0000"
          Margin="0,0,0,20">

                                <ComboBox.ItemContainerStyle>
                                    <Style TargetType="ComboBoxItem" BasedOn="{StaticResource TacticalComboBoxItem}">
                                        <Setter Property="Foreground" Value="#8B0000"/>
                                    </Style>
                                </ComboBox.ItemContainerStyle>

                                <ComboBoxItem Content="MD5 (32-bit)" IsSelected="True"/>
                                <ComboBoxItem Content="SHA-1 (160-bit)"/>
                                <ComboBoxItem Content="SHA-256 (256-bit)"/>
                                <ComboBoxItem Content="NTLM (Windows Auth)"/>
                                <ComboBoxItem Content="WPA2-PSK (WiFi Handshake)"/>
                                <ComboBoxItem Content="bcrypt (Adaptive)"/>
                                <ComboBoxItem Content="SHA-512 (512-bit)"/>
                            </ComboBox>


                            
                            <Border Background="{StaticResource TacticalDark}" 
                                    Padding="16" 
                                    BorderBrush="{StaticResource TacticalBorder}" 
                                    BorderThickness="1"
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <TextBlock Text="WPA2 CONFIGURATION" Foreground="{StaticResource TacticalWhite}" 
                                             FontSize="11" FontWeight="Bold" Margin="0,0,0,12"/>
                                    <TextBlock Text="SSID (Network Name if any its optional)" Foreground="#888888" FontSize="10" Margin="0,0,0,6"/>
                                    <TextBox x:Name="SsidInput" 
                                             Style="{StaticResource TacticalTextBox}"
                                             Height="35"
                                             Foreground="#44FF44"/>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="DICTIONARY SOURCE" Foreground="#888888" FontSize="11" Margin="0,0,0,6"/>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="WordlistPath" 
                                         IsReadOnly="True" 
                                         Style="{StaticResource ReadOnlyTextBox}"
                                         VerticalContentAlignment="Center"
                                         Text="No wordlist selected..."/>
                                <Button Grid.Column="1" 
                                        Content="BROWSE" 
                                        Click="BrowseWordlist_Click" 
                                        Width="100" 
                                        Height="40"
                                        Margin="12,0,0,0" 
                                        Style="{StaticResource TacticalButton}"/>
                            </Grid>

                            <TextBlock Text="ATTACK CONFIGURATION" Style="{StaticResource SectionHeader}"/>

                            <CheckBox x:Name="ChkMutate" 
                                      Content="Enable Mutation Engine" 
                                      Margin="0,0,0,8"
                                      IsChecked="True"/>
                            <CheckBox x:Name="ChkCommon" 
                                      Content="Priority Scan: Top 1000 Common First" 
                                      Margin="0,0,0,8"
                                      IsChecked="True"/>
                            <CheckBox x:Name="ChkRules" 
                                      Content="Apply Advanced Rule Sets" 
                                      Margin="0,0,0,8"/>
                            <CheckBox x:Name="ChkBruteforce" 
                                      Content="Fallback to Bruteforce (4-8 chars)" 
                                      Margin="0,0,0,16"
                                      Foreground="#888888"/>

                            <Separator Background="#333333" Margin="0,0,0,20"/>

                            <Button Content="START CRACKING" 
                                    Click="StartCrack_Click" 
                                    Height="60" 
                                    Style="{StaticResource GoldButton}" 
                                    FontSize="16" 
                                    FontWeight="Bold"
                                    Margin="0,0,0,12"/>

                            <Button Content="ABORT" 
                                    Click="StopCrack_Click" 
                                    Height="45" 
                                    Style="{StaticResource DangerButton}"
                                    FontSize="14"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <Border Grid.Column="1" Background="{StaticResource TacticalMedium}" 
                       BorderBrush="{StaticResource TacticalBorder}" BorderThickness="1">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" 
                                   Text="TERMINAL OUTPUT" 
                                   Style="{StaticResource SectionHeader}"/>

                        <Border Grid.Row="1" 
                                Background="{StaticResource TacticalPanel}" 
                                BorderBrush="{StaticResource TacticalBorder}" 
                                BorderThickness="1"
                                Margin="0,0,0,20">
                            <ScrollViewer x:Name="CrackScroll" 
                                          VerticalScrollBarVisibility="Auto"
                                          Padding="16">
                                <TextBlock x:Name="CrackOutput" 
                                           Foreground="#888888" 
                                           FontSize="11" 
                                           TextWrapping="Wrap" 
                                           LineHeight="18"
                                           FontFamily="Consolas"
                                           Text=">>> VRAX CRACKER ENGINE&#x0a;>>> MULTI-CORE PROCESSING READY&#x0a;>>> AWAITING TARGET CONFIGURATION"/>
                            </ScrollViewer>
                        </Border>

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="0,0,0,12">
                                <TextBlock Text="PERFORMANCE METRICS" 
                                           Foreground="#888888" 
                                           FontSize="11" 
                                           VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="HASH RATE: " Foreground="#888888" FontSize="11" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="RateLabel" 
                                               Text="0 H/s" 
                                               Foreground="#44FF44" 
                                               FontSize="14" 
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Grid.Row="1">
                                <Grid Margin="0,0,0,8">
                                    <TextBlock x:Name="StatusLabel" 
                                               Text="SYSTEM IDLE" 
                                               Foreground="{StaticResource TacticalWhite}" 
                                               FontSize="12"
                                               FontWeight="SemiBold"/>
                                    <TextBlock x:Name="ProgressText" 
                                               Text="0%" 
                                               HorizontalAlignment="Right" 
                                               Foreground="#888888" 
                                               FontSize="12"/>
                                </Grid>
                                <ProgressBar x:Name="CrackProgress" 
                                             Style="{StaticResource GoldProgressBar}"
                                             Height="10"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            
            <Border Grid.Row="2" 
                    Background="{StaticResource TacticalMedium}" 
                    BorderBrush="{StaticResource TacticalBorder}" 
                    BorderThickness="0,1,0,0" 
                    Padding="20"
                    Margin="0,12,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock Text="DECRYPTED RESULT" 
                                   Foreground="#888888" 
                                   FontSize="11"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="RESULT STATUS" 
                                   Foreground="{StaticResource TacticalWhite}" 
                                   FontSize="16" 
                                   FontWeight="Bold"/>
                    </StackPanel>

                    <Border Grid.Column="1" 
                            Background="{StaticResource TacticalPanel}" 
                            BorderBrush="{StaticResource TacticalBorder}" 
                            BorderThickness="1" 
                            Padding="20"
                            Margin="20,0">
                        <TextBlock x:Name="ResultLabel" 
                                   Text="[ AWAITING TARGET ]" 
                                   Foreground="#888888" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap"/>
                    </Border>

                    <Button Grid.Column="2" 
                            Content="COPY TO CLIPBOARD" 
                            Click="CopyResult_Click"
                            Width="180"
                            Height="45"
                            Style="{StaticResource TacticalButton}"
                            FontSize="12"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
