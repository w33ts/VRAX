                                                    <TextBlock Grid.Row="10" Grid.Column="0" Text="⚙️ Hardware" Foreground="{StaticResource TextSecondary}" Margin="0,0,10,8"/>
                                                    <ProgressBar Grid.Row="10" Grid.Column="1" Style="{StaticResource ReconProgressBarStyle}" Value="0" Height="15" Margin="0,0,10,8"/>
                                                    <TextBlock Grid.Row="10" Grid.Column="2" x:Name="HardwareProgressText" Text="0/12" Foreground="{StaticResource TextTertiary}" FontSize="10"/>

                                                    <TextBlock Grid.Row="11" Grid.Column="0" Text="🔧 Misc" Foreground="{StaticResource TextSecondary}" Margin="0,0,10,8"/>
                                                    <ProgressBar Grid.Row="11" Grid.Column="1" Style="{StaticResource ReconProgressBarStyle}" Value="0" Height="15" Margin="0,0,10,8"/>
                                                    <TextBlock Grid.Row="11" Grid.Column="2" x:Name="MiscProgressText" Text="0/18" Foreground="{StaticResource TextTertiary}" FontSize="10"/>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="{StaticResource BackgroundMedium}"
                                               BorderBrush="{StaticResource BorderPrimary}"
                                               BorderThickness="1"
                                               CornerRadius="4"
                                               Padding="15"
                                               Margin="0,15,0,0">
                                            <StackPanel>
                                                <TextBlock Text="Recently Completed"
                                                          FontWeight="Bold"
                                                          Foreground="{StaticResource TextSecondary}"
                                                          Margin="0,0,0,10"/>
                                                <ItemsControl x:Name="RecentCompletedList">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding}" 
                                                                     Foreground="{StaticResource TextTertiary}" 
                                                                     FontSize="10" 
                                                                     Margin="0,2,0,2"/>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                        <Grid Margin="0,20,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Button x:Name="ExportProgressButton"
                                                   Grid.Column="0"
                                                   Content="📊 EXPORT"
                                                   Style="{StaticResource ReconButtonStyle}"
                                                   Height="35"
                                                   Margin="0,0,5,0"
                                                   Click="ExportProgress_Click"/>
                                            <Button x:Name="ResetProgressButton"
                                                   Grid.Column="1"
                                                   Content="🔄 RESET"
                                                   Style="{StaticResource ReconButtonStyle}"
                                                   Background="{StaticResource ErrorBrush}"
                                                   Height="35"
                                                   Margin="5,0,5,0"
                                                   Click="ResetProgress_Click"/>
                                            <Button x:Name="GenerateReportButton"
                                                   Grid.Column="2"
                                                   Content="📄 REPORT"
                                                   Style="{StaticResource ReconButtonStyle}"
                                                   Height="35"
                                                   Margin="5,0,0,0"
                                                   Click="GenerateReport_Click"/>
                                        </Grid>
                                    </StackPanel>
                                </ScrollViewer>
                            </TabItem>
                        </TabControl>
                    </Border>

                    <Border Grid.Row="2"
                            Background="{StaticResource BackgroundLight}"
                            BorderBrush="{StaticResource BorderSecondary}"
                            BorderThickness="0,1,0,0"
                            Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="⚡ Double-click command to copy | Verified 2026"
                                      Foreground="{StaticResource TextMuted}"
                                      FontSize="10"
                                      VerticalAlignment="Center"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,15,0">
                                <Border Width="8" Height="8" CornerRadius="4" Background="{StaticResource SuccessBrush}" Margin="0,0,5,0"/>
                                <TextBlock x:Name="RightPanelStats" Text="256 entries" Foreground="{StaticResource TextMuted}" FontSize="10"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,15,0">
                                <Border Width="8" Height="8" CornerRadius="4" Background="{StaticResource AccentPrimary}" Margin="0,0,5,0"/>
                                <TextBlock x:Name="VerifiedCountText" Text="100% verified" Foreground="{StaticResource TextMuted}" FontSize="10"/>
                            </StackPanel>

                            <TextBlock Grid.Column="3"
                                      x:Name="CurrentEntryStatus"
                                      Text=""
                                      Foreground="{StaticResource AccentPrimary}"
                                      FontSize="10"
                                      FontWeight="Bold"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2"
                Style="{StaticResource PanelBorderStyle}"
                Margin="0,12,0,0"
                Padding="15,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                       Width="10"
                       Height="10"
                       CornerRadius="5"
                       Background="{StaticResource SuccessBrush}"
                       Margin="0,0,10,0"/>

                <TextBlock Grid.Column="1"
                          x:Name="StatusText"
                          Text="Ready - 256 privilege escalation techniques loaded (All verified)"
                          Foreground="{StaticResource TextSecondary}"
                          FontSize="11"
                          VerticalAlignment="Center"/>

                <Separator Grid.Column="2"
                          Background="{StaticResource BorderSecondary}"
                          Width="1"
                          Height="15"
                          Margin="15,0"/>

                <TextBlock Grid.Column="3"
                          Text="🔒 EDUCATIONAL USE ONLY"
                          Foreground="{StaticResource AccentPrimary}"
                          FontSize="11"
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>

                <TextBlock Grid.Column="4"
                          x:Name="SessionTimer"
                          Text="Session: 00:00"
                          Foreground="{StaticResource TextMuted}"
                          FontSize="10"
                          VerticalAlignment="Center"
                          Margin="0,0,15,0"/>

                <TextBlock Grid.Column="5"
                          x:Name="VersionText"
                          Text="v3.0.0"
                          Foreground="{StaticResource TextMuted}"
                          FontSize="10"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
