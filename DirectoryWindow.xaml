<Window x:Class="ReconSuite.DirectoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Height="800" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        Background="#0A0A0A"
        FontFamily="Segoe UI"
        Foreground="#CCCCCC"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>

        <SolidColorBrush x:Key="TacticalBlack" Color="#0A0A0A"/>
        <SolidColorBrush x:Key="TacticalDark" Color="#121212"/>
        <SolidColorBrush x:Key="TacticalMedium" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TacticalLight" Color="#242424"/>
        <SolidColorBrush x:Key="TacticalRedDark" Color="#5A0000"/>
        <SolidColorBrush x:Key="TacticalRed" Color="#8B0000"/>
        <SolidColorBrush x:Key="TacticalRedBright" Color="#A30000"/>
        <SolidColorBrush x:Key="TacticalRedText" Color="#CC6666"/>
        <SolidColorBrush x:Key="TacticalWhite" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TacticalBorder" Color="#450000"/>
        <SolidColorBrush x:Key="TacticalDisabled" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="TacticalHover" Color="#6A0000"/>
        <SolidColorBrush x:Key="TacticalPanel" Color="#101010"/>
        <SolidColorBrush x:Key="TacticalGridLine" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="TacticalSuccess" Color="#006600"/>
        <SolidColorBrush x:Key="TacticalWarning" Color="#996600"/>
        <SolidColorBrush x:Key="TacticalCritical" Color="#990000"/>

        <Style x:Key="TacticalButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalHover}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TacticalRed}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A0000"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalDisabled}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#333333"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button" BasedOn="{StaticResource TacticalButton}">
            <Setter Property="Height" Value="60"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="24,12"/>
        </Style>

        <Style x:Key="TacticalTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="CaretBrush" Value="{StaticResource TacticalRed}"/>
            <Setter Property="SelectionBrush" Value="{StaticResource TacticalRedBright}"/>
            <Setter Property="SelectionOpacity" Value="0.3"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ReadOnlyTextBox" TargetType="TextBox" BasedOn="{StaticResource TacticalTextBox}">
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Background" Value="{StaticResource TacticalPanel}"/>
            <Setter Property="Foreground" Value="#888888"/>
        </Style>

        <Style x:Key="TacticalProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalRed}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="14"/>
        </Style>

        <Style x:Key="TacticalDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource TacticalPanel}"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="#0F0F0F"/>
            <Setter Property="RowHeight" Value="32"/>
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
                        <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Padding" Value="12,6"/>
                        <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Height" Value="36"/>
                        <Setter Property="FontSize" Value="11"/>
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="{StaticResource TacticalGridLine}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Padding" Value="12,4"/>
                        <Setter Property="FontSize" Value="11"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
                                <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatsPanel" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource TacticalDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
        </Style>

        <Style x:Key="StatusIndicator" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource TacticalRedDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource TacticalBlack}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="48" Background="{StaticResource TacticalDark}" 
                    BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
                        <TextBlock Text="VRAX" Style="{StaticResource HeaderText}" FontSize="20"/>
                        <TextBlock Text=" DIRECTORY" Style="{StaticResource HeaderText}" Foreground="{StaticResource TacticalRed}" 
                                 FontWeight="SemiBold" Margin="4,0,0,0"/>
                        <TextBlock Text="ADVANCED DIRECTORY FUZZER" Style="{StaticResource HeaderText}" 
                                 FontSize="16" Margin="20,0,0,0" Foreground="#AAAAAA"/>
                    </StackPanel>

                    <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Style="{StaticResource StatusIndicator}">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource TacticalRed}" Margin="0,0,8,0"/>
                            <TextBlock x:Name="EngineStatus" Text="STANDBY" Style="{StaticResource HeaderText}" FontSize="12"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="{StaticResource TacticalDark}" 
                            BorderBrush="{StaticResource TacticalBorder}" BorderThickness="1" 
                            Padding="12,6" Margin="407,0,12,0" Grid.ColumnSpan="2">
                        <StackPanel>
                            <TextBlock Text="PROTOCOL" Foreground="#888888" FontSize="10"/>
                            <TextBlock Text="HTTP/HTTPS" Foreground="{StaticResource TacticalWhite}" FontSize="11" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="{StaticResource TacticalMedium}" 
                    BorderThickness="1" BorderBrush="{StaticResource TacticalBorder}" 
                    Margin="0,12,0,12" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="220"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,16,0">
                        <TextBlock Text="TARGET URL" Foreground="{StaticResource TacticalWhite}" 
                                 FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <TextBox x:Name="TargetUrl" 
                                 Text="http://example.com/" 
                                 Style="{StaticResource TacticalTextBox}"
                                 Height="45"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="16,0">
                        <TextBlock Text="WORDLIST" Foreground="{StaticResource TacticalWhite}" 
                                 FontSize="12" FontWeight="SemiBold" Margin="0,0,0,8"/>
                        <Grid>
                            <TextBox x:Name="WordlistPath" 
                                     Style="{StaticResource ReadOnlyTextBox}"
                                     Height="45"
                                     VerticalContentAlignment="Center"/>
                            <Button Content="BROWSE" 
                                    HorizontalAlignment="Right" 
                                    Width="100" 
                                    Height="36"
                                    Margin="0,0,2,0"
                                    Style="{StaticResource TacticalButton}"
                                    Click="Browse_Click"/>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                        <Button x:Name="StartBtn" 
                                Content="START SCAN" 
                                Click="StartFuzz_Click" 
                                Height="60"
                                Style="{StaticResource ActionButton}"
                                FontSize="14"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="2" Background="{StaticResource TacticalMedium}" 
                    BorderThickness="1" BorderBrush="{StaticResource TacticalBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource TacticalDark}" 
                           BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,0,0,1" 
                           Padding="16,12">
                        <Grid>
                            <TextBlock Text="DISCOVERED ENDPOINTS" 
                                      Foreground="{StaticResource TacticalWhite}" 
                                      FontSize="14" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="HITS: " Foreground="#888888" FontSize="11" VerticalAlignment="Center"/>
                                <TextBlock x:Name="HitCounter" Text="0" Foreground="{StaticResource TacticalRed}" 
                                         FontSize="14" FontWeight="Bold" VerticalAlignment="Center" Margin="6,0,20,0"/>
                                <Button Content="EXPORT" 
                                        Width="100" 
                                        Height="32"
                                        Style="{StaticResource TacticalButton}"
                                        Click="Export_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <DataGrid Grid.Row="1"
                              x:Name="DirGrid" 
                              Style="{StaticResource TacticalDataGrid}"
                              AutoGenerateColumns="False"
                              SelectionMode="Single"
                              CanUserSortColumns="True"
                              RowDetailsVisibilityMode="VisibleWhenSelected">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="STATUS" Binding="{Binding Status}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="200">
                                                <Setter Property="Foreground" Value="#44FF44"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="403">
                                                <Setter Property="Foreground" Value="#FFAA44"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="404">
                                                <Setter Property="Foreground" Value="#888888"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Status}" Value="500">
                                                <Setter Property="Foreground" Value="#FF4444"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="METHOD" Binding="{Binding Method}" Width="80">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="PATH" Binding="{Binding Path}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="SIZE" Binding="{Binding Length, StringFormat={}{0} bytes}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="#88AAFF"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="TIME" Binding="{Binding ResponseTime, StringFormat={}{0:F1}s}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="Foreground" Value="#FFAA44"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <Border Grid.Row="3" Background="{StaticResource TacticalMedium}" 
                    BorderThickness="1,1,1,1" BorderBrush="{StaticResource TacticalBorder}" 
                    Margin="0,12,0,0" Padding="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock x:Name="LiveStatus" 
                                   Text="ENGINE IDLE" 
                                   Foreground="{StaticResource TacticalWhite}" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,12"/>

                        <Grid Margin="0,0,0,16">
                            <ProgressBar x:Name="FuzzProgress" 
                                         Style="{StaticResource TacticalProgressBar}"
                                         Height="10"/>
                            <TextBlock x:Name="ProgressText" 
                                       Text="0%" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource TacticalWhite}" 
                                       FontSize="10" 
                                       FontWeight="Bold"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                                <TextBlock Text="THREADS: " Foreground="#888888" FontSize="10"/>
                                <TextBlock x:Name="ThreadCount" Text="0" Foreground="{StaticResource TacticalWhite}" 
                                         FontSize="11" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,24,0">
                                <TextBlock Text="REQ/SEC: " Foreground="#888888" FontSize="10"/>
                                <TextBlock x:Name="RequestRate" Text="0" Foreground="#FFAA44" 
                                         FontSize="11" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,24,0">
                                <TextBlock Text="TOTAL: " Foreground="#888888" FontSize="10"/>
                                <TextBlock x:Name="TotalRequests" Text="0" Foreground="{StaticResource TacticalWhite}" 
                                         FontSize="11" FontWeight="Bold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                <TextBlock Text="ELAPSED: " Foreground="#888888" FontSize="10"/>
                                <TextBlock x:Name="ElapsedTime" Text="00:00:00" Foreground="#88AAFF" 
                                         FontSize="11" FontWeight="Bold"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                        <Border Background="{StaticResource TacticalDark}" 
                               BorderBrush="{StaticResource TacticalBorder}" 
                               BorderThickness="1" 
                               Padding="16,12">
                            <StackPanel>
                                <TextBlock x:Name="HexMonitor" 
                                           Text="MEMORY MONITOR" 
                                           Foreground="#666666" 
                                           FontSize="11" 
                                           FontWeight="Bold"
                                           Margin="0,0,0,4"/>
                                <TextBlock Text="SYSTEM OPTIMAL" 
                                           Foreground="{StaticResource TacticalRed}" 
                                           FontSize="12" 
                                           FontWeight="Bold"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>