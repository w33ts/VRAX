<Window x:Class="ReconSuite.VanguardScanner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0A0A0A"
        FontFamily="Segoe UI"
        Foreground="#CCCCCC"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <SolidColorBrush x:Key="TacticalBlack" Color="#0A0A0A" />
        <SolidColorBrush x:Key="TacticalDark" Color="#121212" />
        <SolidColorBrush x:Key="TacticalMedium" Color="#1A1A1A" />
        <SolidColorBrush x:Key="TacticalLight" Color="#242424" />
        <SolidColorBrush x:Key="TacticalRedDark" Color="#5A0000" />
        <SolidColorBrush x:Key="TacticalRed" Color="#8B0000" />
        <SolidColorBrush x:Key="TacticalRedBright" Color="#A30000" />
        <SolidColorBrush x:Key="TacticalRedText" Color="#CC6666" />
        <SolidColorBrush x:Key="TacticalWhite" Color="#E0E0E0" />
        <SolidColorBrush x:Key="TacticalBorder" Color="#450000" />
        <SolidColorBrush x:Key="TacticalDisabled" Color="#2A2A2A" />
        <SolidColorBrush x:Key="TacticalHover" Color="#6A0000" />
        <SolidColorBrush x:Key="TacticalSuccess" Color="#006600" />
        <SolidColorBrush x:Key="TacticalWarning" Color="#996600" />
        <SolidColorBrush x:Key="TacticalCritical" Color="#990000" />
        <SolidColorBrush x:Key="TacticalPanel" Color="#101010" />
        <SolidColorBrush x:Key="TacticalGridLine" Color="#1A1A1A" />
        <SolidColorBrush x:Key="TacticalCriticalBg" Color="#1A0000" />
        <SolidColorBrush x:Key="TacticalCriticalFg" Color="#FF4444" />
        <SolidColorBrush x:Key="TacticalHighBg" Color="#331100" />
        <SolidColorBrush x:Key="TacticalHighFg" Color="#FF8844" />
        <SolidColorBrush x:Key="TacticalMediumBg" Color="#333300" />
        <SolidColorBrush x:Key="TacticalMediumFg" Color="#FFFF44" />
        <SolidColorBrush x:Key="TacticalLowBg" Color="#003300" />
        <SolidColorBrush x:Key="TacticalLowFg" Color="#44FF44" />
        <SolidColorBrush x:Key="TacticalVulnerableBg" Color="#1A0000" />
        <SolidColorBrush x:Key="TacticalVulnerableFg" Color="#FF4444" />
        <SolidColorBrush x:Key="TacticalSafeBg" Color="#001A00" />
        <SolidColorBrush x:Key="TacticalSafeFg" Color="#44FF44" />

        <Style x:Key="TacticalButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource TacticalRedDark}" />
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="14,8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalHover}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource TacticalRed}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A0000" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource TacticalDisabled}" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#333333" />
                                <Setter Property="Foreground" Value="#666666" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TacticalTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource TacticalDark}" />
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="CaretBrush" Value="{StaticResource TacticalRed}" />
            <Setter Property="SelectionBrush" Value="{StaticResource TacticalRedBright}" />
            <Setter Property="SelectionOpacity" Value="0.3" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="TacticalProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource TacticalDark}" />
            <Setter Property="Foreground" Value="{StaticResource TacticalRed}" />
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Height" Value="14" />
        </Style>

        <Style x:Key="TacticalDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource TacticalPanel}" />
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="Horizontal" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="SelectionMode" Value="Extended" />
            <Setter Property="RowBackground" Value="Transparent" />
            <Setter Property="AlternatingRowBackground" Value="#0F0F0F" />
            <Setter Property="RowHeight" Value="32" />
            <Setter Property="ColumnHeaderStyle">
                <Setter.Value>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="{StaticResource TacticalDark}" />
                        <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
                        <Setter Property="FontWeight" Value="SemiBold" />
                        <Setter Property="Padding" Value="12,6" />
                        <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="Height" Value="36" />
                        <Setter Property="FontSize" Value="11" />
                    </Style>
                </Setter.Value>
            </Setter>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderBrush" Value="{StaticResource TacticalGridLine}" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="Padding" Value="12,4" />
                        <Setter Property="FontSize" Value="11" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource TacticalRedDark}" />
                                <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TacticalListBox" TargetType="ListBox">
            <Setter Property="Background" Value="{StaticResource TacticalPanel}" />
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
            <Setter Property="BorderBrush" Value="{StaticResource TacticalBorder}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
                        <Setter Property="BorderBrush" Value="{StaticResource TacticalGridLine}" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="Padding" Value="12,6" />
                        <Setter Property="FontFamily" Value="Consolas" />
                        <Setter Property="FontSize" Value="11" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource TacticalRedDark}" />
                                <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A1A1A" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TacticalTabItem" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="{StaticResource TacticalDark}" Margin="0"
                                BorderThickness="1,1,1,0" BorderBrush="{StaticResource TacticalBorder}" CornerRadius="0">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center"
                                            HorizontalAlignment="Center" ContentSource="Header"
                                            Margin="20,10" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource TacticalMedium}" />
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource TacticalRed}" />
                                <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
                                <Setter Property="FontWeight" Value="SemiBold" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="#999999" />
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{StaticResource TacticalLight}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Padding" Value="0" />
        </Style>

        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="StatusText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TacticalWhite}" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style x:Key="RequestGrid" TargetType="DataGrid" BasedOn="{StaticResource TacticalDataGrid}">
            <Setter Property="RowHeight" Value="30" />
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Result}" Value="VULNERABLE">
                                <Setter Property="Background" Value="{StaticResource TacticalVulnerableBg}" />
                                <Setter Property="Foreground" Value="{StaticResource TacticalVulnerableFg}" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Result}" Value="SAFE">
                                <Setter Property="Background" Value="{StaticResource TacticalSafeBg}" />
                                <Setter Property="Foreground" Value="{StaticResource TacticalSafeFg}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource TacticalBlack}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Height="48" Background="{StaticResource TacticalDark}" 
                    BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,0,0,1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="20,0" VerticalAlignment="Center">
                        <TextBlock Text="VRAX" Style="{StaticResource HeaderText}" FontSize="20"/>
                        <TextBlock Text=" ELITE" Style="{StaticResource HeaderText}" Foreground="{StaticResource TacticalRed}" 
                                 FontWeight="SemiBold" Margin="4,0,0,0"/>
                        <TextBlock Text="ENTERPRISE SCANNER" Style="{StaticResource HeaderText}" 
                                 FontSize="14" Margin="20,0,0,0" Foreground="#AAAAAA"/>
                    </StackPanel>

                    <Border Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            Background="{StaticResource TacticalRedDark}" Padding="12,4" CornerRadius="2">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource TacticalRed}" Margin="0,0,8,0"/>
                            <TextBlock x:Name="StatusText" Text="OPERATIONAL - READY" Style="{StaticResource StatusText}" />
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,12,0" VerticalAlignment="Center">
                        <Button x:Name="MinimizeBtn" Width="28" Height="28"
                                Background="Transparent" BorderBrush="{StaticResource TacticalBorder}" BorderThickness="1"
                                ToolTip="Minimize">
                            <TextBlock Text="_" FontSize="14" Foreground="{StaticResource TacticalWhite}" />
                        </Button>
                        <Button x:Name="CloseBtn" Width="28" Height="28" Margin="8,0,0,0"
                                Background="{StaticResource TacticalRedDark}" BorderBrush="{StaticResource TacticalBorder}" BorderThickness="1"
                                ToolTip="Close">
                            <TextBlock Text="×" FontSize="16" Foreground="{StaticResource TacticalWhite}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="{StaticResource TacticalMedium}" Margin="0,12,0,12" Padding="16"
                    BorderThickness="1" BorderBrush="{StaticResource TacticalBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="TARGET" Foreground="{StaticResource TacticalWhite}"
                                 FontWeight="SemiBold" FontSize="12" VerticalAlignment="Center" Width="60" />
                        <TextBox x:Name="TargetUrl"
                                 Text="https://example.com"
                                 Style="{StaticResource TacticalTextBox}"
                                 Width="500" Height="32" Margin="8,0,0,0"
                                 ToolTip="Enter target URL for enterprise security testing" />
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0">
                        <Button x:Name="StartScanBtn"
                                Content="START SCAN"
                                Style="{StaticResource TacticalButton}"
                                Width="120" Height="32"
                                Click="StartScanBtn_Click"
                                FontSize="12" />
                        <Button x:Name="StopScanBtn"
                                Content="STOP"
                                Style="{StaticResource TacticalButton}"
                                Width="80" Height="32" Margin="8,0,0,0"
                                Click="StopScanBtn_Click"
                                IsEnabled="False"
                                Background="{StaticResource TacticalDisabled}" />
                    </StackPanel>

                    <Border Grid.Column="3" Background="{StaticResource TacticalDark}" Padding="12,6"
                            BorderBrush="{StaticResource TacticalBorder}" BorderThickness="1" Margin="24,0,0,0">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="FINDINGS:" Foreground="{StaticResource TacticalWhite}"
                                     FontSize="11" FontWeight="SemiBold" Margin="0,0,8,0" />
                            <TextBlock x:Name="FoundCount" Text="0" Foreground="{StaticResource TacticalRed}"
                                     FontWeight="Bold" FontSize="14" />
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0,0,0">
                        <Button x:Name="SettingsBtn" Content="⚙️ SETTINGS" Width="90" Height="32"
                                Style="{StaticResource TacticalButton}" Background="{StaticResource TacticalDark}"
                                Click="SettingsBtn_Click" Margin="0,0,8,0" />
                        <Button x:Name="ViewCoverageMatrixBtn" Content="📊 COVERAGE" Width="90" Height="32"
                                Style="{StaticResource TacticalButton}" Background="{StaticResource TacticalDark}"
                                Click="ViewCoverageMatrix_Click" Margin="0,0,8,0" />
                        <Button x:Name="ViewAuthorizationBtn" Content="🔐 AUTH" Width="80" Height="32"
                                Style="{StaticResource TacticalButton}" Background="{StaticResource TacticalDark}"
                                Click="ViewAuthorization_Click" Margin="0,0,8,0" />
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Row="2" Background="{StaticResource TacticalMedium}" 
                    BorderThickness="1" BorderBrush="{StaticResource TacticalBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{StaticResource TacticalDark}" Padding="16,12" 
                            BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,0,0,1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="SCAN PROGRESS" 
                                      Foreground="{StaticResource TacticalWhite}" FontWeight="SemiBold" FontSize="12"/>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ProgressBar x:Name="OverallProgress" Width="400" Height="12"
                                           Minimum="0" Maximum="100" Value="0"
                                           Style="{StaticResource TacticalProgressBar}" />
                                <TextBlock x:Name="ProgressText" Text="0%" Margin="12,0,0,0"
                                         Foreground="{StaticResource TacticalWhite}" FontWeight="SemiBold" FontSize="11" />
                            </StackPanel>

                            <TextBlock Grid.Column="2" Text="OWASP TOP 10 + COMPLIANCE" Foreground="#AAAAAA"
                                     FontWeight="Medium" FontSize="11" />
                        </Grid>
                    </Border>

                    <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="0">
                        <TabItem Header="LIVE REQUESTS" Style="{StaticResource TacticalTabItem}">
                            <Grid Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="200" />
                                </Grid.RowDefinitions>

                                <DataGrid x:Name="RequestsGrid" Grid.Row="0" Style="{StaticResource RequestGrid}"
                                         AutoGenerateColumns="False" SelectionChanged="RequestsGrid_SelectionChanged"
                                         Margin="0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="#" Binding="{Binding Id}" Width="40" />
                                        <DataGridTextColumn Header="TIME" Binding="{Binding Timestamp, StringFormat=HH:mm:ss}" Width="80" />
                                        <DataGridTextColumn Header="METHOD" Binding="{Binding Method}" Width="70" />
                                        <DataGridTextColumn Header="CATEGORY" Binding="{Binding Category}" Width="140" />
                                        <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="400">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="PAYLOAD" Binding="{Binding Payload}" Width="250">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="STATUS" Binding="{Binding StatusCode}" Width="70">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="SIZE" Binding="{Binding Size, StringFormat={}{0} bytes}" Width="80" />
                                        <DataGridTextColumn Header="TIME" Binding="{Binding ResponseTime, StringFormat={}{0:F1}s}" Width="70" />
                                        <DataGridTextColumn Header="RESULT" Binding="{Binding Result}" Width="120">
                                            <DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                                    <Setter Property="FontWeight" Value="SemiBold" />
                                                </Style>
                                            </DataGridTextColumn.ElementStyle>
                                        </DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <GridSplitter Grid.Row="1" Height="4" HorizontalAlignment="Stretch"
                                            Background="{StaticResource TacticalBorder}" ShowsPreview="True" />

                                <Grid Grid.Row="2" Margin="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,1,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Background="{StaticResource TacticalDark}" Padding="12,6">
                                                <TextBlock Text="REQUEST DETAILS" Foreground="{StaticResource TacticalWhite}"
                                                         FontWeight="SemiBold" FontSize="11" />
                                            </Border>
                                            <TextBox x:Name="RequestDetails" Grid.Row="1"
                                                     Style="{StaticResource TacticalTextBox}"
                                                     IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                                                     TextWrapping="NoWrap" FontFamily="Consolas" FontSize="10"
                                                     Background="{StaticResource TacticalPanel}" BorderThickness="0" />
                                        </Grid>
                                    </Border>

                                    <GridSplitter Grid.Column="1" Width="4" HorizontalAlignment="Stretch"
                                                Background="{StaticResource TacticalBorder}" ShowsPreview="True" />

                                    <Border Grid.Column="2" BorderBrush="{StaticResource TacticalBorder}" BorderThickness="0,1,0,0">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Background="{StaticResource TacticalDark}" Padding="12,6">
                                                <TextBlock Text="RESPONSE DETAILS" Foreground="{StaticResource TacticalWhite}"
                                                         FontWeight="SemiBold" FontSize="11" />
                                            </Border>
                                            <TextBox x:Name="ResponseDetails" Grid.Row="1"
                                                     Style="{StaticResource TacticalTextBox}"
                                                     IsReadOnly="True" VerticalScrollBarVisibility="Auto"
                                                     TextWrapping="NoWrap" FontFamily="Consolas" FontSize="10"
                                                     Background="{StaticResource TacticalPanel}" BorderThickness="0" />
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Grid>
                        </TabItem>

                        <TabItem Header="VULNERABILITIES" Style="{StaticResource TacticalTabItem}">
                            <DataGrid x:Name="VulnGrid" Style="{StaticResource TacticalDataGrid}" Margin="0">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="CATEGORY" Binding="{Binding OWASPCategory}" Width="180" />
                                    <DataGridTextColumn Header="TYPE" Binding="{Binding Type}" Width="160" />
                                    <DataGridTextColumn Header="SEVERITY" Binding="{Binding Severity}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                                <Setter Property="Padding" Value="4,2" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Severity}" Value="CRITICAL">
                                                        <Setter Property="Background" Value="{StaticResource TacticalCriticalBg}" />
                                                        <Setter Property="Foreground" Value="{StaticResource TacticalCriticalFg}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="HIGH">
                                                        <Setter Property="Background" Value="{StaticResource TacticalHighBg}" />
                                                        <Setter Property="Foreground" Value="{StaticResource TacticalHighFg}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="MEDIUM">
                                                        <Setter Property="Background" Value="{StaticResource TacticalMediumBg}" />
                                                        <Setter Property="Foreground" Value="{StaticResource TacticalMediumFg}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Severity}" Value="LOW">
                                                        <Setter Property="Background" Value="{StaticResource TacticalLowBg}" />
                                                        <Setter Property="Foreground" Value="{StaticResource TacticalLowFg}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="400" />
                                    <DataGridTextColumn Header="PARAMETER" Binding="{Binding Parameter}" Width="140" />
                                    <DataGridTextColumn Header="CONFIDENCE" Binding="{Binding Confidence, StringFormat={}{0}%}" Width="100">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="HorizontalAlignment" Value="Center" />
                                                <Setter Property="FontWeight" Value="SemiBold" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
