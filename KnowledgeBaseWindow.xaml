                                <TreeViewItem Header="Purple Teaming Concepts" Tag="Advanced_Purple" Foreground="{StaticResource TextWhite}"/>
                            </TreeViewItem>
                        </TreeView>
                    </ScrollViewer>
                </Grid>
            </Border>

            <Border Grid.Column="1"
                    Style="{StaticResource MainBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Background="{StaticResource BackgroundMedium}"
                            BorderBrush="{StaticResource BorderGray}"
                            BorderThickness="0,0,0,1"
