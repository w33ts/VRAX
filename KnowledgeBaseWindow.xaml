                                <TreeViewItem Header="GraphQL Vulnerabilities" Tag="Vuln_GraphQL" Foreground="{StaticResource TextWhite}"/>
                                <TreeViewItem Header="Race Conditions Guide" Tag="Vuln_Race" Foreground="{StaticResource TextWhite}"/>
                                <TreeViewItem Header="Deserialization Attacks" Tag="Vuln_Deser" Foreground="{StaticResource TextWhite}"/>
                                <TreeViewItem Header="Business Logic Flaws" Tag="Vuln_Logic" Foreground="{StaticResource TextWhite}"/>
                            </TreeViewItem>

                            <TreeViewItem Header="🔍 RECONNAISSANCE MASTER CLASS" IsExpanded="False" Foreground="{StaticResource TextWhite}">
