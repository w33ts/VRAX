                        Background="{StaticResource BackgroundMedium}"
                        BorderBrush="{StaticResource BorderGray}"
                        BorderThickness="1"
                        CornerRadius="6"
                        Width="400"
                        Height="45">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
