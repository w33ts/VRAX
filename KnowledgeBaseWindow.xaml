                                <TreeViewItem Header="VDP vs Paid Programs" Tag="Intro_VDP" Foreground="{StaticResource TextWhite}"/>
                                <TreeViewItem Header="Creating Your Hacker Profile" Tag="Intro_Profile" Foreground="{StaticResource TextWhite}"/>
